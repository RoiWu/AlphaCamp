<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a class="navbar-brand" href="/restaurants/new">新增菜單</a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">

      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <div class="card-photo">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            </div>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="infobar d-flex justify-content-between">
                <span class="badge badge-pill badge-danger font-weight-normal d-flex align-items-center">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs ml-1"></i>
                </span>
                <div class="edit">
                  <a href="/restaurants/{{this.id}}/edit"><i class="fas fa-pencil-alt ml-4 mr-1 fa-s"></i></a>
                  <form action="/restaurants/{{ this.id }}?_method=DELETE" method="POST" style="display: inline;"
                    onsubmit="return deleteCheckAgain()">
                    <button type="submit" style="border: none; background: transparent;"
                      class="fas fa-times-circle fa-s">
                    </button>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>